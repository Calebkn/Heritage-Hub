{
    "name": "marketplace/php-ecommerce",
    "description": "A complete PHP marketplace solution with Google OAuth and tracking",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "google/apiclient": "^2.0",
        "phpmailer/phpmailer": "^6.0",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Marketplace\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000"
    },
    "config": {
        "optimize-autoloader": true
    }
}